{
  "name": "condosync-angularjs",
  "version": "1.0.0",
  "description": "Sistema de Gestão de Condomínios em AngularJS",
  "scripts": {
    "dev": "concurrently \"npm:watch:css\" \"npm:serve\"",
    "serve": "live-server --port=5500",
    "build:css": "tailwindcss -i ./src/index.css -o ./assets/styles.css --minify",
    "watch:css": "tailwindcss -i ./src/index.css -o ./assets/styles.css --watch"
  },
  "dependencies": {
    "@uirouter/angularjs": "^1.1.1",
    "angular": "^1.8.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "live-server": "^1.2.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7"
  }
}